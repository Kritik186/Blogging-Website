<%- include("partials/header.ejs") %>
<div class="container" >
    <div class="header">Edit Your Blog</div>
    <div class="row">
        <form action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
            <div class="form-group" ">
                <label for="title">Title</label>
                <input type="text" id="title" name="blog[title]" value="<%=blog.title%>">
            </div>
            
            <div class="form-group field">
                <label for="image">Image Link</label>
                <input type="text" id="image" name="blog[link]" value="<%=blog.link%>" placeholder="Enter the url of the image">
            </div>
            
            <div class="form-group">
                <label for="desc">Description</label>
                <input id="desc" type="text" name="blog[desc]" value="<%=blog.description%>" placeholder="Enter some information about the image"> 
            </div>
            
            <div>
                <button >Submit your Blog</button>
            </div>
        </form>
    </div>
    
</div>

<%- include("partials/footer.ejs") %>