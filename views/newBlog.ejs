<%- include("partials/header.ejs") %>
<div class="container" style="width: 30%; margin: auto auto;">
    <div class="row">
        <form action="/blogs" method="post">
            <div class="form-group" >
                <div class="form-group">
                    <label for="1">Title</label>
                    <input type="text" class="form-control"style="font-size: 1.5rem;" name="head" id="1" placeholder="Please Enter the name of the Blog Here">
                </div>
                
                <div class="form-group">
                    <label for="2">Image Link</label>
                    <input type="text" id="2" class="form-control" style="font-size: 1.5rem;" name="img" placeholder="Enter the url of the image">
                </div>
                
                <div class="form-group">
                    <label for="3">Description</label>
                    <!-- <input id="desc" type="text" name="desc" placeholder="Enter some information about the image">  -->
                    <textarea name="desc" id="3" class="form-control" style="font-size: 1.5rem;" cols="30" rows="10"></textarea>
                </div>
                
                <div>
                    <button class="btn btn-primary">Submit your Blog</button>
                </div>

            </div>
           
        </form>
    </div>
    
</div>

<%- include("partials/footer.ejs") %>